@model IEnumerable<Vaultex_BLL.Models.EmployeeDTO>

@{
    ViewData["Title"] = "Home Page";
}

@*<div class="text-center">
    <h1 class="display-4">List of Employees</h1>    

</div>*@
<div class="col-md-12">
    <div class="card bg-white">
        <div class="card-header">
            <span>List of Employees</span>
        </div>
        <div class="card-body pb-0" style="overflow-x:auto">
            <table cellspacing="0" border="0" style="border-style:none; border-collapse:collapse" class="table table-responsive-sm table-bordered table-striped studtable" id="elisting" data-order='[[1, "asc"]]' data-page-length='25'>
                <thead>
                    <tr>
                        <th>OrganisationNumber</th>
                        <th>FirstName</th>
                        <th> LastName</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr class="text-center"><td colspan="10" class="text-center"> Oops.!!! No Employee record.</td></tr>
                    }

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrganisationNumber</td>
                            <td> @item.FirstName</td>
                            <td>@item.LastName</td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>
